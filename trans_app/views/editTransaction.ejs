<div class="container mt-4">
  <h1>Edit Transaction</h1>
  <form method="post" action="/transaction/updateTransactionItem" class="mt-4">
    <input type="hidden" name="itemId" value="<%= transaction._id %>">
    <div class="form-group mb-2">
      <label for="description" class="fw-bold">Description:</label>
      <input type="text" 
             value="<%= transaction.description %>"
             name="description"
             id="description"
             class="form-control">
    </div>
    <div class="form-group mb-2">
      <label for="amount" class="fw-bold">Amount:</label>
      <input type="number" 
             value="<%= transaction.amount %>"
             name="amount"
             step="0.01"
             id="amount"
             class="form-control">
    </div>
    <div class="form-group mb-2">
      <label for="category" class="fw-bold">Category:</label>
      <input type="text" 
             value="<%= transaction.category %>"
             name="category"
             id="category"
             class="form-control">
    </div>
    <div class="form-group mb-2">
      <label for="date" class="fw-bold">Date:</label>
      <input type="date" 
             value="<%= transaction.date.toISOString().slice(0,10) %>"
             name="date"
             id="date"
             class="form-control">
    </div>
    <button type="submit" class="btn btn-success mt-2">Update</button>
  </form>
</div> 